<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Cutoff</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Additional CSS styles can be added here */
        .navbar {
            background-color: #333;
            /* Background color */
            padding: 10px 20px;
            /* Padding for the navbar */
            display: flex;
            /* Make navbar items display in a row */
            justify-content: space-between;
            /* Distribute items evenly */
            align-items: center;
            /* Vertically center items */
        }

        /* Logo */
        .logo a {
            color: #fff;
            /* Text color */
            text-decoration: none;
            /* Remove underline */
            font-size: 24px;
            /* Font size */
            font-weight: bold;
            /* Bold text */
        }

        /* Navbar links */
        .nav-links {
            list-style: none;
            /* Remove default list styles */
            margin: 0;
            /* Remove default margin */
            padding: 0;
            /* Remove default padding */
        }

        .nav-links li {
            display: inline;
            /* Display list items horizontally */
            margin-right: 20px;
            /* Spacing between list items */
        }

        .nav-links li a {
            color: #fff;
            /* Text color */
            text-decoration: none;
            /* Remove underline */
            font-size: 18px;
            /* Font size */
        }

        /* Hover effect for links */
        .nav-links li a:hover {
            text-decoration: underline;
            /* Underline on hover */
        }

    </style>
</head>
<body>
    <nav class=" navbar ">
        <div class="logo"><a href="#">CCMS</a></div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/tools">Tools</a></li>
            <li><a href="/cutoff">Cutoff</a></li>
            <li><a href="/login">Login</a></li>
        </ul>
    </nav>


    <div class="container mt-4">
        <h2>College Cutoff Data</h2>
        <div>
            <p><strong>IIT:</strong> <%= jsonData.iit %></p>
            <p><strong>Category:</strong> <%= jsonData.category %></p>
            <p><strong>Year:</strong> <%= jsonData.year %></p>
            <p><strong>Gender:</strong> <%= jsonData.gender %></p>
        </div>
        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th>Academic Program</th>
                    <th><%= jsonData.category %> OR</th>
                    <th><%= jsonData.category %> CR</th>
                    <th>Avg Branch CTC</th>
                    <th>Seat Capacity</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(entry => { %>
                    <tr>
                        <td><%= entry.Academic_program_name %></td>
                        <td><%= entry[`${jsonData.category}_${jsonData.gender}_OR`] %></td>
                        <td><%= entry[`${jsonData.category}_${jsonData.gender}_CR`] %></td>
                        <td><%= entry.Avg_branch_ctc %></td>
                        <td><%= entry.Seat_capacity %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
